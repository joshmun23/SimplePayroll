<div class="row text-center">
  <p id="notice"><%= notice %></p>
</div>

<div class="row top-buffer text-center">
  <div class="row">
    <h2><%= @employee.name %></h2>
  </div>

  <div class="row top-buffer">

    <div class="col-md-2">
      <strong>Wage</strong>
    </div>
    <div class="col-md-2">
      <strong>Marital status</strong>
    </div>
    <div class="col-md-2">
      <strong>Fica</strong>
    </div>
    <div class="col-md-2">
      <strong>Fwh</strong>
    </div>
    <div class="col-md-2">
      <strong>Fwh Additional (+$)</strong>
    </div>
    <div class="col-md-2">
      <strong>Swh</strong>
    </div>
  </div>

  <div class="row new-form">
    <div class="col-md-2">
      <%= @employee.wage %>
    </div>
    <div class="col-md-2">
      <%= @employee.marital_status %>
    </div>
    <div class="col-md-2">
      <%= @employee.fica %>
    </div>
    <div class="col-md-2">
      <%= @employee.fwh %>
    </div>
    <div class="col-md-2">
      <%= @employee.fwh_fixed %>
    </div>
    <div class="col-md-2">
      <%= @employee.swh %>
    </div>
  </div>

  <div class="col-md-12 text-center">
    <%= link_to 'Edit Employee', edit_employee_path(@employee) %> 
  </div>
</div>

<% if @employee.paychecks.any? %>

<div class="row top-buffer">
  <div class="row last_paycheck">
    <div class="col-md-8 col-md-offset-2 text-center">
      <h2><strong><%= "Paycheck from #{@employee.paychecks[-1].start_date} to #{@employee.paychecks[-1].start_date}" %></strong><h2>
    </div>
  </div>
  <div class="row last_paycheck">
    <div class="col-md-3 col-md-offset-3 text-right">
      <strong>Total Hours:</strong>
    </div>
    <div class="col-md-3">
      <%= "#{@employee.paychecks[-1].total_hours_worked}" %>
    </div>
  </div>
  <div class="row last_paycheck">
    <div class="col-md-3 col-md-offset-3 text-right">
      <strong>Gross Wages:</strong>
    </div>
    <div class="col-md-3">
      <%= "#{@employee.paychecks[-1].gross_wages}" %>
    </div>
  </div>

  <div class="row last_paycheck">
    <div class="row deduction-buffer">
      <div class="row">
        <div class="col-md-3 col-md-offset-3 text-right">
          FICA deduction
        </div>
        <div class="col-md-3">
          <%= "#{@employee.paychecks[-1].fica_deduction}" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3 col-md-offset-3 text-right">
          FWH deduction
        </div>
        <div class="col-md-3">
          <%= "#{@employee.paychecks[-1].fwh_deduction}" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3 col-md-offset-3 text-right">
          Additional FWH deduction: 
        </div>
        <div class="col-md-3">
          <%= "#{@employee.fwh_fixed}"%>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3 col-md-offset-3 text-right">
          SWH deduction: 
        </div>
        <div class="col-md-3">
          <%= "#{@employee.paychecks[-1].swh_deduction}" %>
        </div>
      </div>
  </div>

  <div class="row total_deductions">
    <div class="col-md-3 col-md-offset-3 text-right">
      <strong>Total deductions:</strong>
    </div>
    <div class="col-md-3">
      <%= "#{@employee.paychecks[-1].total_deductions}" %>
    </div>
  </div>

  <div class="row last_paycheck">
    <div class="col-md-3 col-md-offset-3 text-right">
      <strong>Net wages:</strong>
    </div>
    <div class="col-md-3">
      <%= "#{@employee.paychecks[-1].net_wages}" %>
    </div>
  </div>
</div>



<% end %>

<div class="row top-buffer">
  <div class="row text-center">
    <div class="col-md-1 col-md-offset-5">
      <%= link_to 'View All Employees', employees_path %>
    </div>
    <div class="col-md-1">
      <%= link_to 'New Paycheck', new_paycheck_path %>
    </div>
  </div>
</div>
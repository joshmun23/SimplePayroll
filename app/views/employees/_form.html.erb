<div class="row top-buffer">
  <%= form_for(@employee) do |f| %>
    <% if @employee.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

        <ul>
        <% @employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <div class="container-fluid text-center">
    <div class="row new-form">
      <div class="col-md-4 col-md-offset-4">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
      </div>
    </div>
    <div class="row new-form">
      <div class="col-md-4 col-md-offset-4">
          <%= f.label :wage %><br>
          <%= f.text_field :wage %>
      </div>
    </div>
    <div class="row new-form">
      <div class="col-md-4 col-md-offset-4">
          <%= f.label :marital_status %></br>
          <% if @employee.marital_status.nil? %>
            <%= f.select(:marital_status, options_for_select([['',''],['Married','Married'],['Single','Single']])) %>
          <% elsif @employee.marital_status == 'Married' %>
            <%= f.select(:marital_status, options_for_select([['Married','Married'],['Single','Single']])) %>
          <% else %>
            <%= f.select(:marital_status, options_for_select([['Single','Single'],['Married','Married']])) %>
          <% end %>
      </div>
    </div>
    <div class="row new-form">
      <div class="col-md-4 col-md-offset-4">
          <%= f.label :fica %><br>
          <%= f.text_field :fica %>
      </div>
    </div>
    <div class="row new-form">
      <div class="col-md-4 col-md-offset-4">
          <%= f.label :fwh %><br>
          <%= f.text_field :fwh %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
          <%= f.label "Additional FWH (+$)" %><br>
          <%= f.text_field :fwh_fixed %>
      </div>
    </div>
    <div class="row new-form">
      <div class="col-md-4 col-md-offset-4">
          <%= f.label :swh %><br>
          <%= f.text_field :swh %>
      </div>
    </div>
    <div class="row new-form">
      <div class="actions">
        <div class="col-md-4 col-md-offset-4">
            <%= f.submit %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
<end>
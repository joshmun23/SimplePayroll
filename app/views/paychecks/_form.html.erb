  <% end %>

    <div class="row paycheck-form">
      <div class="field">
        <%= f.label "Select Employee" %><br>

        <%= f.select(:employee_id, options_for_select(@options)) %>

      </div>
    </div>
    <div class="row paycheck-form">
      <div class="field">
        <%= f.label :start_date %><br>
        <%= f.date_select :start_date %>
      </div>
    </div>
    <div class="row paycheck-form">
      <div class="field">
        <%= f.label :end_date %><br>
        <%= f.date_select :end_date %>
      </div>
    </div>
    <div class="row paycheck-form">
      <div class="field">
        <%= f.label :total_hours_worked %><br>
        <%= f.text_field :total_hours_worked %>
      </div>
    </div>
    <div class="row paycheck-form">
      <div>
        <div class="actions">
          <%= f.submit %>
        </div>
        <div class="row">
          <%= link_to 'Back', employees_path %>
        </div>
      </div>
    </div>
  </div>
<% end %>
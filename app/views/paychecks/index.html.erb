<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Total hours worked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paychecks.each do |paycheck| %>
      <tr>
        <td><%= paycheck.employee_id %></td>
        <td><%= Employee.find(paycheck.employee_id).name %></td>
        <td><%= paycheck.start_date %></td>
        <td><%= paycheck.end_date %></td>
        <td><%= paycheck.total_hours_worked %></td>
        <td><%= link_to 'Show', paycheck %></td>
        <td><%= link_to 'Edit', edit_paycheck_path(paycheck) %></td>
        <td><%= link_to 'Destroy', paycheck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Paycheck', new_paycheck_path %>
